<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_widget"
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:adjustViewBounds="true"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:scaleType="fitCenter"
        tools:srcCompat="@color/colorAccent" />

    <TextView
        android:id="@+id/title_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@+id/img_widget"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:textStyle="bold"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/popularity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_widget"
        android:layout_marginBottom="8dp"
        android:paddingRight="8dp"
        android:layout_toEndOf="@+id/img_widget"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/deskripsi_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popularity"
        android:paddingRight="8dp"
        android:maxLines="5"
        android:layout_toEndOf="@+id/img_widget"
        tools:text="@string/app_name" />

</RelativeLayout>